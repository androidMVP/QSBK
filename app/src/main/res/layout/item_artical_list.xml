<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/im_artical_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/author_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginLeft="12dp"
        android:id="@+id/tv_artical_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kaixin"
        app:layout_constraintBottom_toBottomOf="@+id/im_artical_avatar"
        app:layout_constraintLeft_toRightOf="@+id/im_artical_avatar"
        app:layout_constraintTop_toTopOf="@+id/im_artical_avatar" />


    <ImageView
        android:id="@+id/im_artical_img"
        app:layout_constraintTop_toBottomOf="@+id/im_artical_avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/artical_default"
        android:layout_width="294dp"
        android:layout_height="148dp"/>

    <TextView
        android:id="@+id/tv_artical_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:text="一名火车司机很久都没回家，他的妻子带着孩子在铁路旁边等他的列车路过，短暂的相见依然让彼此都很开心。感动 莫名想哭"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/im_artical_img" />

    <TextView
        android:id="@+id/tv_artical_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/color_8E8E93"
        app:layout_constraintTop_toTopOf="@+id/im_artical_avatar"
        app:layout_constraintBottom_toBottomOf="@id/im_artical_avatar"
        android:layout_marginRight="16dp"
        android:textSize="10sp"
        android:text="2018-10-10"/>


    <ImageView
        android:id="@+id/iv_artical_support"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/operation_support_press"
        app:layout_constraintTop_toBottomOf="@+id/tv_artical_content" />

    <ImageView
        android:id="@+id/iv_artical_unsupport"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/operation_unsupport"
        app:layout_constraintLeft_toRightOf="@+id/iv_artical_support"
        app:layout_constraintTop_toBottomOf="@+id/tv_artical_content" />

    <ImageView
        android:id="@+id/iv_artical_comment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/operation_comments"
        app:layout_constraintLeft_toRightOf="@+id/iv_artical_unsupport"
        app:layout_constraintTop_toBottomOf="@+id/tv_artical_content" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/operation_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_artical_content" />

    <View
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_artical_support"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/color_e5e5e5"/>

</android.support.constraint.ConstraintLayout>